@using TanzuTacos.WebApp.DummyData
@using TanzuTacos.WebApp.Models

<nav class="navbar fixed-bottom navbar-light bg-light">
  <div class="container-fluid">
   @if (Basket.Tacos.Any())
		{
		 <div class="basket-contents">
		  <h2>Your basket</h2>

				@foreach (var configuredTaco in Basket.Tacos)
				{
			  <ConfiguredTacoItem Taco="configuredTaco" OnRemoved="@(() => RemoveConfiguredTaco(configuredTaco))" />
				}
		 </div>
		}
		else
		{
		 <div class="empty-cart">Choose a taco<br>to get started</div>
		}

	 <div class="basket-total @(Basket.Tacos.Any() ? "" : "hidden")">
	  Total:
	  <span class="total-price">@Basket.GetFormattedTotalPrice()</span>
	  <button class="btn btn-warning" disabled="@(Basket.Tacos.Count == 0)" @onclick="PlaceBasket">
	   Basket >
	  </button>
	 </div>
  </div>
</nav>


@code {
	[Parameter] public Basket Basket { get; set; }
	[Parameter] public DummyUser User { get; set; }

	void RemoveConfiguredTaco(Taco taco)
	{
		Basket.Tacos.Remove(taco);
	}

	async Task PlaceBasket()
	{
		//Check if user is loggedIn for now assume they are and use dummy userId
		//await HttpClient.PostAsJsonAsync("baskets", basket);
		Console.WriteLine($"Basket placed with user id:{User.Id} and basket id:{Basket.BasketId}!");
		Basket = new Basket(User.Id);
	}
}